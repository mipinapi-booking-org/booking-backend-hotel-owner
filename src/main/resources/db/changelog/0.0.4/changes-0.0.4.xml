<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="add-refuse-reason-to-booking" author="developer">
        <comment>Add refuse_reason field to booking table</comment>
        <addColumn tableName="booking">
            <column name="refuse_reason" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="booking" columnName="refuse_reason"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
